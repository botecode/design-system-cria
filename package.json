{
  "name": "design-lib",
  "version": "0.4.001",
  "description": "CRIA_UI - A React + TypeScript design system for CR_IA applications",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm --out-dir dist",
    "dev": "vite --port 3003 --strictPort",
    "dev:force": "lsof -ti:3003 | xargs kill -9 2>/dev/null || true && vite --port 3003 --strictPort",
    "dev:clean": "./scripts/dev.sh",
    "dev:watch": "tsup src/index.ts --watch",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "version:patch": "node scripts/version-patch.js && git push --follow-tags",
    "version:minor": "npm version minor && git push --follow-tags",
    "version:major": "npm version major && git push --follow-tags",
    "version:tag": "git tag -a v$(node -p \"require('./package.json').version\") -m \"Release v$(node -p \"require('./package.json').version\")\"",
    "release:patch": "npm run version:patch && npm run version:tag",
    "release:minor": "npm run version:minor && npm run version:tag",
    "release:major": "npm run version:major && npm run version:tag"
  },
  "dependencies": {
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "phosphor-react": "^1.4.1",
    "react": ">=17",
    "react-dom": ">=17",
    "recharts": "^3.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.4",
    "tsup": "^8.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.7.3"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "keywords": [
    "react",
    "typescript",
    "design-system",
    "ui-components",
    "cria"
  ],
  "author": "CRIA Team",
  "license": "MIT"
}
